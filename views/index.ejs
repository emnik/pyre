		<!-- <div id="footer"> -->
			<div class="row" style="padding-top:30px; color:#F6F4EC;">
				<div class="col-xs-7">
					<p class="text-center">power status:</p>
				</div>
				<div class="col-xs-5">
					<input type="checkbox" data-size="mini" name="power-checkbox" unchecked>
				</div>
			</div>
		<!-- </div> end of footer-->
