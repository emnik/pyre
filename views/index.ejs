<body>
	<!-- <div id="wrapper"> -->
		<header>
			<% include ./partials/header %>
		</header>

		<div class="container-fluid">
			<div class="row">
	    		<div id="temp" class="col-xs-7" style="color:#F6F4EC;">
	    			<h4 class="text-center"><strong>Current Temp</strong></h4>
	    			<h1 class="text-center">
	    			<strong>
							...
						</strong>&deg;C</h1>
