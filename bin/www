// app.locals.startTemp = {mean_sensor_1 : "...", mean_sensor_2 : "...", mean_sensor_all : "..." }; //global variable
//use sockets.io to emit current temperatures every 1min to anyone who wants it!
io.sockets.on('connection', function(socket){
    //send data to client
    setInterval(function(){
      var duration = 240; //the last x seconds of temperature data that we want to retrieve from the database
      temperature.get_temp_data(duration);
      //console.log(temperature.result);
      if (temperature.result.mean_sensor_1!=0){
        socket.emit('temperatures', temperature.result);
        // app.locals.startTemp = temperature.result; //holds the last values.
      }
    }, 60000); //we want data every 1 min
    socket.on('profile', function(data){ //If a client sends the profile to the server
      var current_profile = data.profile;
      if(current_profile!='undefined' && current_profile!=null){
        console.log("Server got update on the selected profile. It currently is: "+data.profile);
        socket.broadcast.emit('current_profile', current_profile); //the server broadcasts it to all the other clients!
      }
    })
});
